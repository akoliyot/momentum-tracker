{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES5",
    "module": "ESNext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "rootDir": "src",
    "types": ["google-apps-script"],
  },
  "include": [
    "src/**/*.ts"
, "src/index.js"  ],
  "exclude": ["node_modules", "build"]
}
